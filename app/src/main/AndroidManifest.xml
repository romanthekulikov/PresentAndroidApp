<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_db"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_db_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Present"
        tools:targetApi="31">
        <activity
            android:name=".activities.startPack.authorizationPack.AuthorizationActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.present"
            android:exported="false"
            android:grantUriPermissions="true">

            <!--
             we intend to request content
              URIs for the images/subdirectory
              of your private file area
            -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <activity
            android:name=".activities.startPack.formPack.GetGameKeyActivity"
            android:exported="false" />
        <activity
            android:name=".activities.startPack.formPack.AddPresentActivity"
            android:exported="true"
            android:screenOrientation="locked" />
        <activity
            android:name=".activities.startPack.formPack.FormActivity"
            android:exported="true" />
        <activity
            android:name=".activities.startPack.appModePack.AppModeActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DistributiveActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.present.com"
                    android:pathPrefix="/distributive"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="distributive"
                    android:scheme="present" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.startPack.welcomePack.WelcomeActivity"
            android:exported="true" />
        <activity
            android:name=".activities.gamePack.getPresentPack.GetPresentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.gamePack.rulesPack.RulesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.gamePack.mapPack.MapActivity"
            android:exported="false" />
        <activity
            android:name=".activities.gamePack.presentPack.PresentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.gamePack.mainPack.MainActivity"
            android:exported="false" />
    </application>

</manifest>